{
  "private": true,
  "name": "brightmirror",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build --no-prerender",
    "serve": "sirv build --cors --single",
    "dev": "preact watch",
    "lint": "eslint src"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor",
    "rules": {
      "max-len": ["error", 130],
      "indent": ["error", 2]
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "eslint": "^6.0.1",
    "eslint-config-synacor": "^3.0.4",
    "preact-cli": "^3.0.0-rc.6",
    "sirv-cli": "^0.4.5"
  },
  "dependencies": {
    "cropperjs": "^1.5.6",
    "dompurify": "^2.0.10",
    "medium-editor": "^5.23.3",
    "preact": "^10.1.0",
    "preact-i18n": "^2.0.0-preactx.2",
    "preact-render-to-string": "^5.1.2",
    "reading-time": "^1.2.0"
  }
}
